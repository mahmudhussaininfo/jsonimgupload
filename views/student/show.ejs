<div class="container my-5 studentform">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <a href="/student/create" target="_blank" class="btn btn-success">
                Add Now
            </a><br> <br>
            <div class="card shadow">
                <div class="card-body">
                    <h2>All Students</h2>
                    <hr>
                    <table class="table table striped mamu-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Email</th>
                                <th>Number</th>
                                <th>photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.reverse().forEach((student, index)=> { %>
                                <tr class="align-middle">
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= student.name %>
                                    </td>
                                    <td>
                                        <%= student.location %>
                                    </td>
                                    <td>
                                        <%= student.email %>
                                    </td>
                                    <td>
                                        <%= student.phone %>
                                    </td>
                                    <td>
                                        <% if (student.photo=='avatar.png' ) { %>

                                            <img src="/images/<%= student.photo %> " alt="">

                                            <% } else { %>

                                                <img src="/images/<%= student.photo %> " alt="">

                                                <% } %>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <% }) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>